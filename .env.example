# ==========================================
# Telemetriya Configuration
# ==========================================

# ------------------------------------------
# Application Settings
# ------------------------------------------
APP_NAME=Telemetriya
VERSION=0.1.0
DEBUG=False

# ------------------------------------------
# Telegram Bot Configuration
# ------------------------------------------
# Get your token from @BotFather on Telegram
TELEGRAM_TOKEN=your_telegram_token_here
# Optional: Webhook URL for production (leave empty for polling)
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# ------------------------------------------
# Database Configuration
# ------------------------------------------
# PostgreSQL connection URL with asyncpg driver
DATABASE_URL=postgresql+asyncpg://telemetriya:password@localhost:5432/telemetriya

# ------------------------------------------
# LLM (Large Language Model) Configuration
# ------------------------------------------
# Provider: ollama (local), openai, glm
LLM_PROVIDER=ollama
# API key (required for openai/glm, optional for ollama)
LLM_API_KEY=
# Base URL for LLM API (e.g., http://localhost:11434 for ollama)
LLM_BASE_URL=http://localhost:11434
# Model name (e.g., mistral, llama2, gpt-4)
LLM_MODEL=mistral

# ------------------------------------------
# Todoist Integration (Optional)
# ------------------------------------------
# Get your API key from https://todoist.com/app/settings/integrations/developer
TODOIST_API_KEY=

# ------------------------------------------
# Storage Configuration
# ------------------------------------------
# Local path for storing files (PDFs, voice messages, etc.)
STORAGE_PATH=./storage

# ------------------------------------------
# Security Settings
# ------------------------------------------
# Secret key for JWT token signing (change this in production!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here_change_this_in_production
# JWT algorithm
ALGORITHM=HS256
# Access token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ------------------------------------------
# Logging Configuration
# ------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Log format: json (production), text (development)
LOG_FORMAT=json
